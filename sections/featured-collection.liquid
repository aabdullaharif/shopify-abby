<ul>
  {% for product in section.settings.collection.products %}
    <li>
      <a href="{{ product.url }}">
        <img src="{{ product.featured_image | img_url: 'medium' }}" />
      </a>
      <h2>{{ product.title }}</h2>
    </li>
  {% endfor %}
</ul>


{% schema %}
  {
    "name": "Featured Collection",
    "tag": "div",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}